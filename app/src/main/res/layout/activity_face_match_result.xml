<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FaceMatchResultActivity">
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purpleColor">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Face Match Result"
            android:textColor="@color/whiteColor"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar">
        <ImageView
            android:id="@+id/resultMark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_success"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_below="@+id/resultMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Face matched with ID Photo"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/confirmLin"
            android:layout_below="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Score:"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="131434134123"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnReturn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/confirmLin"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/round_button"
            android:text="Return"
            android:textColor="@color/whiteColor"
            android:textAllCaps="false"/>


    </RelativeLayout>

</RelativeLayout>